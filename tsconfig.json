{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "lib": ["esnext", "dom"],
    "types": ["vite/client", "vitest/globals", "node", "jsdom", "vitest",]
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "vite-env.d.ts", "tests/**/*.ts"]
}
